{
    "name": "rpungello/sdk-client",
    "version": "1.10.2",
    "description": "Generic client for creating PHP-based SDKs using Spatie's DTOs for data transfer",
    "keywords": [
        "rpungello",
        "sdk-client"
    ],
    "homepage": "https://github.com/rpungello/sdk-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Pungello",
            "email": "rob@rpun.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.7",
        "nesbot/carbon": "^2.68",
        "spatie/data-transfer-object": "^3.9"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "friendsofphp/php-cs-fixer": "^3.13",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Rpungello\\SdkClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rpungello\\SdkClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
